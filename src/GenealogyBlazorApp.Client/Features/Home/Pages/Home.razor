@page "/"
@rendermode InteractiveAuto
@using GenealogyBlazorApp.Shared.DTOs

<PageTitle>@(content?.SiteTitle ?? "Home")</PageTitle>

@if (content == null)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p><em>Loading...</em></p>
    </div>
}
else
{
    <div class="container-fluid">
        @if (!string.IsNullOrEmpty(content.HeroImagePath))
        {
            <div class="row mb-4">
                <div class="col-12 px-0">
                    <img src="@content.HeroImagePath" alt="Hero Image for @content.SiteTitle" class="img-fluid w-100" style="max-height: 400px; object-fit: cover;" />
                </div>
            </div>
        }

        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-4">@content.SiteTitle</h1>
                <p class="lead">@content.Tagline</p>
            </div>
        </div>

        <hr class="my-4" />

        <div class="row">
            <div class="col-md-8">
                <h2 class="mb-3">About</h2>
                <div class="about-content">
                    @((MarkupString)content.AboutContent)
                </div>
            </div>
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(content.ProfileImagePath))
                {
                    <div class="text-center">
                        <img src="@content.ProfileImagePath" alt="Profile Image" class="img-fluid rounded-circle mb-3" style="max-width: 150px;" />
                    </div>
                }
                
                                <div class="card">
                    <h5 class="card-header">County Resources</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><a href="#">Huron</a></li>
                        <li class="list-group-item"><a href="#">Tuscola</a></li>
                        <li class="list-group-item"><a href="#">Sanilac</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
