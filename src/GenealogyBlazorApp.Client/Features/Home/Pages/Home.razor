@page "/"
@rendermode InteractiveAuto
@using GenealogyBlazorApp.Shared.DTOs

<PageTitle>@(content?.SiteTitle ?? "Genealogy - Home")</PageTitle>

@if (content == null)
{
    <div class="text-center mt-5">
        <div class="spinner-border text-secondary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-2 text-muted"><em>Consulting the archives...</em></p>
    </div>
}
else
{
    <div class="container-fluid">
        <div class="hero-section">
            @if (!string.IsNullOrEmpty(content.HeroImagePath))
            {
                <div class="hero-image-container">
                    <img src="@content.HeroImagePath" alt="Hero Image for @content.SiteTitle" class="img-fluid" />
                </div>
            }
            
            <h1 class="hero-title">@content.SiteTitle</h1>
            <p class="hero-tagline">@content.Tagline</p>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card-vintage mb-4">
                    <div class="card-vintage-header">
                        <span>About Our History</span>
                        <span class="text-gold">❧</span>
                    </div>
                    <div class="about-content">
                        @((MarkupString)content.AboutContent)
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(content.ProfileImagePath))
                {
                    <div class="text-center mb-4">
                        <div class="profile-image-container">
                            <img src="@content.ProfileImagePath" alt="Profile Image" class="img-fluid rounded-circle" />
                            <div class="profile-image-caption">The Archivist</div>
                        </div>
                    </div>
                }
                
                <div class="card-vintage">
                    <div class="card-vintage-header">
                        <span>County Resources</span>
                        <span class="text-gold">❖</span>
                    </div>
                    <ul class="county-list">
                        <li><a href="#">Huron County Records</a></li>
                        <li><a href="#">Tuscola County Archives</a></li>
                        <li><a href="#">Sanilac County History</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}
