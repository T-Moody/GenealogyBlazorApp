@using GenealogyBlazorApp.Client.Features.Home.Models

@if(IsEditor)
{
    <div class="mb-3">
        <label for="profileImage" class="form-label">Profile Image Path</label>
        <input type="text" id="profileImage" class="form-control" @bind="State.ProfileImagePath" />
    </div>
    <div class="mb-3">
        <label for="sidebarLinks" class="form-label">Sidebar Links (HTML)</label>
        <textarea id="sidebarLinks" class="form-control" rows="5" @bind="State.SidebarLinks"></textarea>
    </div>
}
else
{
    <div class="text-center mb-4">
        <div class="profile-image-container">
            <img src="@State.ProfileImagePath" alt="Profile Image" class="img-fluid rounded-circle" />
            <div class="profile-image-caption">The Archivist</div>
        </div>
    </div>

    <div class="card-vintage">
        <div class="card-vintage-header">
            <span>County Resources</span>
            <span class="text-gold">‚ùñ</span>
        </div>
        <div class="card-vintage-body">
            @((MarkupString)State.SidebarLinks)
        </div>
    </div>
}
