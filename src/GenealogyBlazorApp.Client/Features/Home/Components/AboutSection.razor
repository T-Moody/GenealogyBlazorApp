@using GenealogyBlazorApp.Client.Features.Home.Models

<div class="card-vintage mb-4">
    <div class="card-vintage-header">
        @if (IsEditor)
        {
            <input type="text" class="form-control form-control-sm vintage-input-header" @bind="State.AboutSectionTitle" placeholder="Section Title" />
        }
        else
        {
            <span>@State.AboutSectionTitle</span>
        }
        <span class="text-gold">‚ùß</span>
    </div>
    <div class="card-vintage-body">
        @if (IsEditor)
        {
            <div class="about-editor">
                <textarea class="form-control vintage-textarea" rows="15" @bind="State.AboutContent" placeholder="Enter about content (HTML supported)..."></textarea>
                <div class="form-text text-muted mt-2">
                    <small>HTML tags are supported for formatting.</small>
                </div>
            </div>
        }
        else
        {
            <div class="about-content">
                @((MarkupString)State.AboutContent)
            </div>
        }
    </div>
</div>
